<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_dark_color</item>
        <item name="colorOnSecondary">@color/text_white</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorError">@color/status_error</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Toolbar theme -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/text_white</item>
    </style>

    <!-- Popup theme -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <!-- Card styles -->
    <style name="CardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/surface_color</item>
    </style>

    <!-- Button styles -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="backgroundTint">@color/primary_color</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SecondaryButton" parent="Widget.Material3.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="backgroundTint">@color/secondary_color</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AccentButton" parent="Widget.Material3.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="backgroundTint">@color/accent_color</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Text styles -->
    <style name="CardTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="StatusText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="StatusSubText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="ReceivedDataText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/received_data_text</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- Input field styles -->
    <style name="InputFieldStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="hintTextColor">@color/primary_color</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Spinner style -->
    <style name="SpinnerStyle">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/spinner_selector</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Progress bar style -->
    <style name="ProgressBarStyle" parent="Widget.Material3.CircularProgressIndicator">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="indicatorColor">@color/primary_color</item>
    </style>
</resources>